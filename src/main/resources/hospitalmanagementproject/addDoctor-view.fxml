<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="270.0" prefWidth="320.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hospitalmanagementproject.addDoctorController">
   <children>
      <Label text="ADD NEW DOCTOR" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="27.0" />
         </font>
      </Label>
      <VBox prefHeight="200.0" prefWidth="100.0">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label prefHeight="25.0" prefWidth="187.0" text="Doctor ID:">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtDoctorID" prefHeight="25.0" prefWidth="325.0" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label prefHeight="25.0" prefWidth="115.0" text="Name:">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtDoctorName" prefHeight="25.0" prefWidth="253.0" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label prefHeight="25.0" prefWidth="101.0" text="Department:">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <ComboBox fx:id="cmbDepartment" prefHeight="25.0" prefWidth="230.0" />
               </children>
            </HBox>
            <HBox prefHeight="51.0" prefWidth="310.0" spacing="5.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#saveBtn" prefHeight="25.0" prefWidth="378.0" text="Save" />
                  <Button mnemonicParsing="false" onAction="#cancelBtn" prefHeight="25.0" prefWidth="376.0" text="Cancel" />
               </children>
            </HBox>
         </children>
      </VBox>
      <Label fx:id="lblClock" text="00:00:00">
         <font>
            <Font size="17.0" />
         </font>
      </Label>
   </children>
   <padding>
      <Insets bottom="2.0" left="5.0" right="5.0" top="10.0" />
   </padding>
</VBox>
